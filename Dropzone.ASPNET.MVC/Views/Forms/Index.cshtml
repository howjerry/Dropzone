
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="@Url.Content("~/dist/dropzone/basic.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/dist/dropzone/dropzone.min.css")" rel="stylesheet" />
    <style>
        .dz-image img {
            height: auto;
            width: 100%;
        }
    </style>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Base</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- AREA CHART -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Form Example</h3>
                    </div>

                    <form class="form-horizontal">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                                </div>
                            </div>
                        </div>
                        <div class="dropzone" id="app">
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


@section scripts{

    <script src="@Url.Content("~/dist/dropzone/dropzone.min.js")"></script>
    <script>
        Dropzone.options.app = false;
        $(function () {
            var remove = new Dropzone('#remove', {
                addRemoveLinks: true,
                init: function () {
                var mockFile = {
                    name: 'images.jpg',
                    upload: { uuid: 'c2f81963-dff5-4ecf-a6d5-b55425973b8c' },
                    size: 15514,
                };

                this.emit("addedfile", mockFile);
                this.emit("complete", mockFile);
                this.emit("thumbnail", mockFile, '@Url.Content("~/Image/c2f81963-dff5-4ecf-a6d5-b55425973b8c.jpg")');
            },});
            remove.on("sending", function (file, xhr, formData) {
                formData.append("uuid", file.upload.uuid);
            });
            remove.on("complete", function (file) {
                var res = eval('(' + file.xhr.responseText + ')');
                swal.fire('Success', '上傳成功', 'success');
            });
            remove.on("removedfile", function (file) {
                $.post('@Url.Action("Remove","Home")?f=' + file.upload.uuid + '.' + /[^.]+$/.exec(file.name))
                    .done(function (data) { })
                    .fail(function (data) { });
            });
        });
    </script>
}